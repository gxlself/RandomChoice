.user-toast{
  position: fixed;
  background: rgba(0, 0, 0, .7);
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  perspective: 1500;
  -webkit-perspective: 1500;
  perspective-origin: center 150%;
  -webkit-perspective-origin: center 150%;
}