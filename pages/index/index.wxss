.result-title{
  color: #3385ff;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx 30rpx;
  border-bottom: 1rpx #3385ff solid;
}
.result-choice{
  color: #444547;
  text-align: center;
  font-size: 50rpx;
  word-break: break-all;
  padding: 30rpx 30rpx 10rpx;
}
.result-choice::after{
  display: block;
  position: relative;
  content: '已经为您选择了';
  color: #3385ff;
  font-size: 24rpx;
  text-align: center;
  padding-bottom: 20rpx;
}
.result-sure{
  background: #3385ff;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx 0;
  color: #ffffff;
}
@keyframes card{
  from {
    transform: rotateY(0deg);
  }
  to {
    transform: rotateY(720deg);
  }
}
@keyframes card-back{
  from {
    transform: rotateY(180deg);
  }
  to {
    transform: rotateY(900deg);
  }
}
