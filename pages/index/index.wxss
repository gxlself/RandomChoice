.page{
  box-sizing: border-box;
  height: 100%;
  background: #ffffff;
  max-width: 100%;
  overflow: auto;
}
.gxl-header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: content-box;
  border-bottom: 1rpx #ece8e8 solid;
  background: #ffffff;
  z-index: 99;
}
.header-icon{
  display: block;
  width: 50rpx;
  height: 50rpx;
  padding: 0 25rpx;
}
.header-share{
  background: url('https://gxlself.com/images/add.png') center no-repeat;
  background-size: 50rpx 50rpx;
}
.gxl-body{
  box-sizing: border-box;
  background: url('https://gxlself.com/images/line.png') center 0% repeat-y;
  background-size: 700rpx 80rpx;
  padding: 0 0 0 30rpx;
  max-width: 100%;
  overflow: hidden;
}
.gxl-blank{
  width: 100%;
}
.choice-item{
  width: 100%;
  min-width: 100%;
  position: relative;
  height: 80rpx;
  line-height: 90rpx;
  padding-right: 9em;
  display: -webkit-box;
  color: #2a2a2a;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.show-choice{
  position: absolute;
  top: 0;
  right: 30rpx;
  color: #3385ff;
}
.choice-delete, .choice-share{
  min-width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0;
  border: 0;
}
.choice-delete{
  background: #f54242;
}
.choice-share{
  background: #20d830;
}
.choice-delete image, .choice-share image{
  width: 40rpx;
  height: 40rpx;
  line-height: 0;
}
button::after{
  border: 0;
}