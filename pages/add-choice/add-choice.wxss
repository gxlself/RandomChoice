.page{
  box-sizing: border-box;
  height: 100%;
  background: #ffffff;
  max-width: 100%;
  overflow: auto;
}
.gxl-header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: content-box;
  border-bottom: 1rpx #ece8e8 solid;
  background: #ffffff;
  z-index: 99;
}
.header-icon{
  display: block;
  width: 50rpx;
  height: 50rpx;
  padding:20rpx 25rpx;
}
.header-back{
  background: url('https://gxlself.com/images/back-a.png') center no-repeat;
  background-size: 50rpx 50rpx;
}
.header-title{
  width: 9em;
  height: 40rpx;
  border-radius: 50rpx;
  padding: 4rpx 30rpx;
  min-height: 40rpx;
  margin: 0 20rpx 0 15rpx;
  box-shadow: 0 0 10rpx #d6d2d2 inset;
}
.header-sure{
  width: 50rpx;
}
.gxl-body{
  box-sizing: border-box;
  background: url('https://gxlself.com/images/line.png') center 0% repeat-y;
  background-size: 700rpx 80rpx;
  padding: 0 30rpx;
}
.choice-item{
  position: relative;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.choice-item input{
  box-shadow: 0 0 10rpx #d6d2d2 inset;
  border-radius: 80rpx;
  padding: 4rpx 30rpx;
  margin-right: 80rpx;
}
.choice-item input, .choice-item text{
  flex: 1;
  margin-left: .5em;
}
.choice-item text{
  height: 80rpx;
  max-height: 80rpx;
  line-height: 90rpx;
}
.choice-index{
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
}
.edit-choice{
  position: absolute;
  right: 0;
  width: 50rpx;
  margin-left: 1em;
}